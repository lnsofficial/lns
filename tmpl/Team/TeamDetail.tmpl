<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
    <title>LNS</title>
    <!-- Bootstrap -->
	<link href="/css/bootstrap.css" rel="stylesheet">
	<link href="/css/style.css" rel="stylesheet" type="text/css">

	<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
	<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
	<!--[if lt IE 9]>
		  <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
		  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
		<![endif]-->
  <!--The following script tag downloads a font from the Adobe Edge Web Fonts server for use within the web page. We recommend that you do not modify it.--><script>var __adobewebfontsappname__="dreamweaver"</script><script src="http://use.edgefonts.net/open-sans:n3,n8,n4:default;overlock:n4:default;poiret-one:n4:default;paytone-one:n4:default.js" type="text/javascript"></script>
</head>
  <body>
  {include file='header.tmpl' login=true}
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-2 about-menu">
        <ul class="nav side">
          <li role="presentation">チームへ参加</li>
          {if $user['team_member'] || count($team_members) >= Teams::COUNT_MAX_MEMBER}
          {else}
          <li role="presentation"><a href="/Team/apply/?team_id={$team_id}&type=1">メンバー申請</a></li>
          {/if}
          {if $isThisTeamContact || $isThisTeamContactApply || count($team_contacts) >= Teams::COUNT_MAX_CONTACT}
          {else}
          <li role="presentation"><a href="/Team/apply/?team_id={$team_id}&type=2">連絡係申請</a></li>
          {/if}
          {if $isThisTeamStaff   || $isThisTeamStaffApply   || count($team_staffs)  >= Teams::COUNT_MAX_STAFF}
          {else}
          <li role="presentation"><a href="/Team/apply/?team_id={$team_id}&type=3">アナリスト申請</a></li>
          {/if}
        </ul>
      </div>
      <div class="col-lg-9">
        <h2>チーム情報</h2>
        <table class="table-bordered">
          <tr>
            <th>チーム名</th>
            <td>{$team_name}</td>
          </tr>
          <tr>
            <th>チーム名（かな）</th>
            <td>{$team_name_kana}</td>
          </tr>
          <tr>
            <th>チーム略称</th>
            <td>{$team_tag}</td>
          </tr>
          <tr>
            <th>チーム略称（かな）</th>
            <td>{$team_tag_kana}</td>
          </tr>
        </table>
        <h2>メンバー一覧</h2>
        <table  class="table-bordered">
          <tr>
            <th>サモナーネーム</th>
            <th>メインロール</th>
          </tr>
          {foreach from=$team_members item=member key=member_id}
            <tr>
              <td>{$member.summoner_name}</td>
              <td>
              {if $member.main_role == 1}Top{/if}
              {if $member.main_role == 2}Jungle{/if}
              {if $member.main_role == 3}Mid{/if}
              {if $member.main_role == 4}ADC{/if}
              {if $member.main_role == 5}Support{/if}
              </td>
            </tr>
          {/foreach}
        </table>

        <h2>代表者</h2>
        <table  class="table-bordered">
          <tr>
            <th>サモナーネーム</th>
            <th>DiscordID</th>
          </tr>
          <tr>
            <td>{$team_owner->summoner_name}</td>
            <td>{$team_owner->discord_id}</td>
          </tr>
        </table>

        {if isset($team_contacts)}
          {if count($team_contacts)}
        <h2>連絡係</h2>
        <table  class="table-bordered">
          <tr>
            <th>サモナーネーム</th>
            <th>DiscordID</th>
          </tr>
            {foreach from=$team_contacts item=contact key=idx}
            <tr>
              <td>{$contact.summoner_name}</td>
              <td>{$contact.discord_id}</td>
            </tr>
            {/foreach}
        </table>
          {/if}
        {/if}

        {if isset($team_staffs)}
          {if count($team_staffs)}
        <h2>アナリスト</h2>
        <table  class="table-bordered">
          <tr>
            <th>サモナーネーム</th>
          </tr>
            {foreach from=$team_staffs item=staff key=idx}
            <tr>
              <td>{$staff.summoner_name}</td>
            </tr>
            {/foreach}
        </table>
          {/if}
        {/if}

        {if count($user_team_applys) > 0}
          {if $user.id == $team_owner->id}
        <h3>応募一覧</h3>
        <table  class="table-bordered">
          <tr>
            <th>サモナーネーム</th>
            <th>種別</th>
            {if $user.id == $team_owner->id}
            <th>動作</th>
            {/if}
          </tr>
          {foreach from=$user_team_applys item=apply key=idx}
            <tr>
              <td><a href="/User/show_user/{$apply.user_id}">{$apply.summoner_name}</a></td>
              <td>
              {if $apply.type == 1}メンバー{/if}
              {if $apply.type == 2}連絡係{/if}
              {if $apply.type == 3}アナリスト{/if}
              </td>
              {if $user.id == $team_owner->id}
              <td>
                <form method="post" action="/Team/accept" onclick="return chkAccept()" class="form-horizontal">
                  <input type="hidden" name="user_team_apply_id" value="{$apply.id}">
                  <button type="submit" class="btn btn-default">この参加申請を承諾</button>
                </form>
                <form method="post" action="/Team/deny" onclick="return chkDeny()" class="form-horizontal">
                  <input type="hidden" name="user_team_apply_id" value="{$apply.id}">
                  <button type="submit" class="btn btn-default">この参加申請を削除</button>
                </form>
              </td>
              {/if}
            </tr>
          {/foreach}
        </table>
          {/if}
        {/if}

      </div>
    </div>




  </div>
  {include file='footer.tmpl'}

	<script type="text/javascript"><!--
	function chkAccept(){
		ret = confirm("申請を承認します。よろしいですか？");
		if ( ret == true ){
			return true;
		}else{
			return false;
		}
	}
	function chkDeny(){
		ret = confirm("申請を棄却します。よろしいですか？");
		if ( ret == true ){
			return true;
		}else{
			return false;
		}
	}
	// --></script>

<!-- jQuery (necessary for Bootstrap's JavaScript plugins) --> 
  <script src="/js/jquery-1.11.3.min.js"></script>
  <!-- Include all compiled plugins (below), or include individual files as needed --> 
  <script src="/js/bootstrap.js"></script>
  </body>
</html>