</head>
  <body>
  {include file='header.tmpl'}
  <div class="container-fluid">
    <form name="form1" method="post">
      <div class="row">
        <div class="col-lg-2 about-menu">
          <ul class="nav side">
            <li role="presentation">チーム詳細</li>
          </ul>
        </div>
        <div class="col-lg-9">
          <h2>チーム情報</h2>
          <table class="table-bordered">
            <tr>
              <th>チーム名</th>
              <td>{$team_name}</td>
            </tr>
            <tr>
              <th>チーム名（かな）</th>
              <td>{$team_name_kana}</td>
            </tr>
            <tr>
              <th>チーム略称</th>
              <td>{$team_tag}</td>
            </tr>
            <tr>
              <th>チーム略称（かな）</th>
              <td>{$team_tag_kana}</td>
            </tr>
          </table>
          <h2>メンバー一覧</h2>
          <table  class="table-bordered">
            <tr>
              <th>サモナーネーム</th>
            </tr>
            {foreach from=$team_member item=member key=member_id}
              <tr>
                <td>{$member.summoner_name}</td>
              </tr>
            {/foreach}
          </table>
        </div>
      </div>
    </form>
  </div>
  {include file='footer.tmpl'}
<!-- jQuery (necessary for Bootstrap's JavaScript plugins) --> 
  <script src="/js/jquery-1.11.3.min.js"></script>
  <script type="text/javascript">
    function join(){
      if( window.confirm( 'この試合に参加します。' ) ){
        document.form1.action = "/Match/Join";
        document.form1.submit();
      }
    }
    function cancel(){
      if( window.confirm( 'この試合をキャンセルします。' ) ){
        document.form1.action = "/Match/Cancel";
        document.form1.submit();
      }
    }
    function registerResult(){
      document.form1.action = "/MatchResult/Form";
      document.form1.submit();
    }
  </script>
  <!-- Include all compiled plugins (below), or include individual files as needed --> 
  <script src="/js/bootstrap.js"></script>
  </body>
</html>
